+			return (HANDLE)(dirp);
+		} else {
+			ENCLOSE_IO_SET_LAST_ERROR;
+			return INVALID_HANDLE_VALUE;
+		}
+	} else {
+		ret = squash_open_inner(enclose_io_fs, incoming, follow_link);
+		if (ret >= 0) {
+			return (HANDLE)(squash_global_fdtable.fds[ret]->payload);
