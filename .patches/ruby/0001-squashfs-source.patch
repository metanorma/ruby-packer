+int squash_stat(sqfs *fs, const char *path, struct stat *buf)
+{
+	sqfs_err error;
+	sqfs_inode node;
+	short found;
+
+	error = sqfs_inode_get(fs, &node, sqfs_inode_root(fs));
+	if (SQFS_OK != error) {
