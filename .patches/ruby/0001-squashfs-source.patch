+		goto failure;
+	}
+	error = sqfs_stat(fs, &node, buf);
+	if (SQFS_OK != error) {
+		goto failure;
+	}
+
+	return 0;
+failure:
+	if (!errno) {
+		errno = ENOENT;
+	}
+	return -1;
+}
+
+int squash_lstat(sqfs *fs, const char *path, struct stat *buf)
+{
+	sqfs_err error;
